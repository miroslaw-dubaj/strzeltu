<% include ../partials/header.ejs %>

<div class="container">
  <div class="row justify-content-center">
    <div>
      <h2 class="my-3">This is new post form for <%= range.name %></h2>
      <form action="/ranges/<%= range._id %>/comments" method="post">
        <div class="form-group">
          <input class="form-control" type="text" name="comment[text]" placeholder="comment">
        </div>
        <div class="form-group">
          <input class="btn btn-dark btn-block" type="submit" value="Submit Range!">
        </div>
      </form>    
      <a href="/ranges/<%= range._id %>">Go back</a>
    </div>
  </div>
</div>

<% include ../partials/footer.ejs %>